@page
@model code.Pages.CreateEditTemplateModel
@{
    ViewData["Title"] = "Create/Edit Template";
}

<div class="note-creation-section" style="max-width: 700px;">
    <form method="post" class="note-creation-form">
        
        <div class="note-form-group">
            <label for="Name" class="note-form-label">Názov:</label>
            <input type="text" class="note-form-input" id="Name" name="Name" value="@Model.Name" >
        </div>

        <div class="note-form-group">
            <label for="Destination" class="note-form-label">Destinácia:</label>
            <textarea class="note-form-input" id="Destination" name="Destination" rows="5">@Model.Destination</textarea>
        </div>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="text-danger"><b>@Model.ErrorMessage</b></div>
        }

        <div class="note-form-button-group">
            <a href="/Templates" class="note-form-button">Späť</a>
            <button type="submit" class="note-form-button">Uložiť</button>
        </div>
    </form>
</div>
